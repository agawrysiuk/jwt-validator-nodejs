# Keycloak Configuration for JWT Validation

# Keycloak issuer URI (used to validate the 'iss' claim in JWT)
KEYCLOAK_ISSUER_URI=http://localhost:8180/realms/homeai

# Keycloak JWK URI (used to fetch public keys for signature verification)
KEYCLOAK_JWK_URI=http://localhost:8180/realms/homeai/protocol/openid-connect/certs

# JWK cache TTL in seconds (default: 300 = 5 minutes)
JWK_CACHE_TTL=300
